# Campfire Widget - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================

NODE_ENV=development
DEBUG=false

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# ============================================
# DATABASE (PostgreSQL)
# ============================================

# Railway provides this automatically
# DATABASE_URL=postgresql://user:password@host:5432/database

# Alternative local database URL
# CAMPFIRE_DB_URL=postgresql://postgres:password@localhost:5432/campfire

# Use SQLite for development (set to 'true' to skip PostgreSQL)
# USE_SQLITE=true

# ============================================
# AUTHENTICATION
# ============================================

# Generate a strong random secret (at least 32 characters)
JWT_SECRET=your-super-secret-key-change-this-in-production

# ============================================
# TWITCH OAUTH
# ============================================

# Get these from https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Must match your Twitch app redirect URI
TWITCH_REDIRECT_URI=http://localhost:3000/api/auth/twitch/callback

# ============================================
# OPTIONAL: GOOGLE OAUTH
# ============================================

# Get these from https://console.cloud.google.com/
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ============================================
# OPTIONAL: PAYMENT (Stripe)
# ============================================

# For premium subscriptions
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# DEPLOYMENT
# ============================================

# Railway provides these automatically
# RAILWAY_ENVIRONMENT=true
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app

# Run database seeds on startup (for development)
# RUN_SEEDS=false
